  <h1 align="center" class="heading">QR Scanning</h1>

    <div id="qrcode"></div>

    <script>
       // DOMContentLoaded event listener
       document.addEventListener("DOMContentLoaded", function() {
            // Get the element where you want to render the QR code
            var qrDiv = document.getElementById("qrcode");

            // The data you want to encode into QR code
            var qrData = "https://www.openai.com";

            // Options for QR code generation
            var qrOptions = {
                text: qrData,
                width: 200,
                height: 200
            };

            // Generate QR code
            new QRCode(qrDiv, qrOptions);
        });
    </script>
