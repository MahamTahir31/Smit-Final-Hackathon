<body id="customer-body">
  <nav class="navbar navbar-expand-lg" id="customerNav">
    <div class="container-fluid">
      <i class="fas fa-credit-card" style="font-size: 1.7rem;"></i>
      <h5 class="Account-name">
        <%= user.username %>
      </h5>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-customer me-auto " id="nav-ul">
          <li class="list-item">
            <a class="nav-feature " aria-current="page" href="../customerPortal">Payments</a>
          </li>
          <li class="list-item">
            <a class="nav-feature active" href="#">Instant Payment</a>
          </li>
          <li class="list-item">
            <a class="nav-feature" href="../QR">QR Code</a>
          </li>

        </ul>
        <form class="d-flex" action="/logout" method="post">
          <input class="btn btn-outline-success" type="submit" value="Log out" id="logbtn">
        </form>
      </div>
    </div>
  </nav>
  <h1 align="center" class="heading">Pay Now!</h1>
  <form class="row g-3" style="width: 50%; margin-left: 330px; margin-top: 30px;" action="/instantPayment" method="post">
            <div class="col-md-6 form-customer" >
                <label for="inputUsername" class="form-label">Username</label>
                <input type="text" class="form-control" id="inputUsername" name="inputUsername">
            </div>
            <div class="col-6 form-customer">
                <label for="inputAddress" class="form-label">Email(optional)</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="inputAddress">
            </div>
            <div class="col-md-12 form-customer">
                <label for="inputAccountNumber" class="form-label">Account Number</label>
                <input type="number" class="form-control" id="inputAccountNumber" min="0" step="1" name="inputAccountNumber">
            </div>
            
            
            <div class="col-md-6 form-customer">
                <label for="inputPaymentAmount" class="form-label">Payment Amount</label>
                <input type="number" class="form-control" id="inputPaymentAmount" placeholder="Enter payment amount" name="inputPaymentAmount">
            </div>
            
            <div class="col-md-4 form-customer">
                <label for="inputBankName" class="form-label">Select Bank Name</label>
                <select id="inputBankName" class="form-select" name="inputBankName">
                <option selected>Habib Bank</option>
                <option selected>United Bank</option>
                <option selected>Meezan Bank</option>
                <option selected>National Bank</option>

              </select>
            </div>
    
        
            <div class="col-12">
              <button type="submit" class="btn-pay">Pay</button>
            </div>
          </form>
</body>
</html>