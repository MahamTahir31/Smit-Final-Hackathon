              <form class="d-flex" action="/logout" method="post">
                <a href="/">Logout</a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Navigation Bar and Content Section -->
  <div class="main-container">
    <div class="slide" id="navSlide">
      <h1>Merchant Portal</h1>
      <ul>
        <li><a href="#" class="nav-item" data-page="dashboard" id="openPage"><i class="fa-solid fa-book"></i> Dashboard</a></li>
